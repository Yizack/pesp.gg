{
  "name": "pesp.gg",
  "version": "2.0.0",
  "description": "Repositorio de la p√°gina web de PESP.GG",
  "author": "Yizack Rangel",
  "license": "MIT",
  "type": "module",
  "homepage": "https://pesp.gg",
  "repository": {
    "type": "git",
    "url": "https://github.com/Yizack/pesp.gg"
  },
  "bugs": {
    "url": "https://github.com/Yizack/pesp.gg/issues"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev --port=5173",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare && npm run husky:install",
    "husky:install": "husky install",
    "husky:msg": "husky add .husky/commit-msg  \"npx --no -- commitlint --edit ${1}\"",
    "release": "node scripts/newRelease.js",
    "changelog": "npx conventional-changelog-cli -i 'CHANGELOG.md' -s",
    "changelog:new": "npx conventional-changelog-cli -i 'CHANGELOG.md' -s -r 0",
    "patch": "npm version patch --no-git-tag-version",
    "minor": "npm version minor --no-git-tag-version",
    "major": "npm version major --no-git-tag-version",
    "tag": "git push --tags",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose --coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@nuxtjs/eslint-config": "^12.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.41.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "nuxt": "^3.5.1",
    "nuxt-icons": "^3.2.1",
    "nuxt-twemoji": "^3.2.3",
    "stylelint": "^15.6.2",
    "xml": "^1.0.1"
  },
  "dependencies": {
    "@glidejs/glide": "^3.6.0",
    "@pinia/nuxt": "^0.4.11",
    "bootstrap": "^5.3.0-alpha3"
  },
  "overrides": {
    "vue": "latest"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "coverageProvider": "v8",
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/$1"
    }
  }
}
